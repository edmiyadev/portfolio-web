---
import GithubIcon from '../assets/svg/github.svg';
import LinkedinIcon from '../assets/svg/linkedin.svg';
import EmailIcon from '../assets/svg/email.svg';
import Data from '../data/PersonalData.json';

const { firstName,  lastName, title, description, email } = Data.personal;
const { github, linkedin } = Data.personal.social;
---

<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden py-20">
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--tw-color-primary)]/20 to-transparent"></div>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <div>
            <h2 class="text-[var(--tw-color-primary)] text-xl font-medium mb-2 opacity-0 fade-in">Hola, soy</h2>
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight opacity-0 fade-in delay-100">
              <span class="text-[var(--tw-color-secondary)]">{firstName}</span>
              <span class="text-[var(--tw-color-primary)]">{lastName}</span>
            </h1>
            <h3 class="text-2xl sm:text-3xl text-[var(--tw-color-text)] mt-4 opacity-0 fade-in delay-200">{title}</h3>
          </div>
          
          <p class="text-gray-400 text-lg max-w-xl opacity-0 fade-in delay-300">
            {description}
          </p>
          
          <div class="flex flex-wrap gap-4 opacity-0 fade-in delay-400">
            <a href="#contact" class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-colors duration-300 transform hover:scale-105">
              Contáctame
            </a>
            <a href="#projects" class="px-6 py-3 border border-purple-600 text-purple-500 hover:bg-purple-600/10 font-medium rounded-lg transition-colors duration-300 transform hover:scale-105">
              Ver mi trabajo
            </a>
          </div>
          
          <div class="flex items-center gap-6 opacity-0 fade-in delay-500">
            <a href={github} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors duration-300">
              <GithubIcon/>
            </a>

            <a href={linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors duration-300">
              <LinkedinIcon/>            
            </a>

            <a href=`mailto:${email}` class="text-gray-400 hover:text-white transition-colors duration-300">
              <EmailIcon/>            
            </a>
          </div>
        </div>
        
        <div class="relative hidden lg:block">
          <div class="absolute -inset-0.5 bg-purple-600 rounded-lg blur opacity-75 animate-pulse"></div>
          <div class="relative bg-gray-900 p-6 rounded-lg border border-gray-800">
            <pre class="text-gray-300 font-mono text-sm"><code><span class="text-purple-400">const</span> <span class="text-blue-400">developer</span> = &#123;
    name: <span class="text-green-400">'Edward Minaya'</span>,
    title: <span class="text-green-400">'Fullstack Developer'</span>,
    skills: [
      <span class="text-green-400">'JavaScript'</span>, 
      <span class="text-green-400">'TypeScript'</span>, 
      <span class="text-green-400">'PHP'</span>, 
      <span class="text-green-400">'Laravel'</span>, 
      <span class="text-green-400">'React'</span>,
      <span class="text-green-400">'Next.js'</span>,
      <span class="text-green-400">'Astro'</span>
    ],
    passion: <span class="text-green-400">'Crear experiencias web increíbles'</span>
&#125;;</code></pre>
          </div>
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#experience" class="text-gray-400 hover:text-white transition-colors duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </section>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const fadeElements = document.querySelectorAll('.fade-in');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            (entry.target as HTMLElement).style.opacity = '1'; // Cast to HTMLElement
          }
        });
      }, { threshold: 0.1 });
      
      fadeElements.forEach(element => {
        observer.observe(element);
      });
    });
  </script>

