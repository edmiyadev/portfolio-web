---
import  Data from "../data/PersonalData.json";


const { projects } = Data;


---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">Proyectos <span class="text-purple-500">Destacados</span></h2>
      <p class="text-gray-400 max-w-2xl mx-auto">Una selección de mi trabajo reciente, mostrando mis habilidades y experiencia en la creación de aplicaciones web modernas.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <div class="bg-gray-800 rounded-lg overflow-hidden border border-gray-700 shadow-lg project-card opacity-0">
          <div class="relative overflow-hidden group">
            <img src={project.image || "/placeholder.svg"} alt={project.name} class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110" />
            <div class="absolute inset-0 bg-purple-900/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-4">
              <a href={project.live} class="px-4 py-2 bg-white text-purple-900 font-medium rounded-lg transform hover:scale-105 transition-transform duration-300">Live Demo</a>
              <a href={project.code} class="px-4 py-2 border border-white text-white font-medium rounded-lg transform hover:scale-105 transition-transform duration-300">View Code</a>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.name}</h3>
            <p class="text-gray-400 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2">
              {project.technologies.map(tag => (
                <span class="px-3 py-1 bg-gray-700 text-gray-300 text-xs font-medium rounded-full">{tag}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="https://github.com/edmiyadev?tab=repositories" target="_blank" class="inline-flex items-center px-6 py-3 border border-purple-600 text-purple-500 hover:bg-purple-600/10 font-medium rounded-lg transition-colors duration-300">
        Ver Todos los Proyectos
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const projectCards = document.querySelectorAll('.project-card');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('fade-in');
            (entry.target as HTMLElement).style.opacity = '1'; // Cast to HTMLElement
          }, index * 150);
        }
      });
    }, { threshold: 0.1 });
    
    projectCards.forEach(card => {
      observer.observe(card);
    });
  });
</script>

